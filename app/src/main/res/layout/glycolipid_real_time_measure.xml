<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:htg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_height="match_parent">
  <TextView
      android:id="@+id/tv_sort"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="空腹"
      android:padding="10dp"
      android:textSize="22sp"
      android:textColor="#48aad4"
      android:gravity="center"
    />
    <!--血糖1-->
    <LinearLayout
        android:layout_below="@id/tv_sort"
        android:id="@+id/ll_blood_sugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--左侧-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="血糖"
                android:textColor="#3cc5cc"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(mmol/L)"
                android:textColor="@color/gray_5" />

        </LinearLayout>

        <!--右侧-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">\

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bubblegreen"
                android:text="8.5"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginLeft="80dp"
                android:paddingTop="12dp"
                android:gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:scaleType="fitXY"
                android:src="@drawable/stick_three"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="低血糖"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="正常"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="高血糖"
                        android:textColor="@color/black"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text=""
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:textSize="12sp"
                        android:text="8"
                        />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:textSize="12sp"
                        android:text="10"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text=""
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
