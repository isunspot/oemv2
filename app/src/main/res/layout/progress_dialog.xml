<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/slideswitch_bg"
        android:text="正在下载，请稍后"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/slideswitch_bg"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:indeterminate="false"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/list"
        android:maxHeight="25dp"
        android:minHeight="25dp"
        android:max="100"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/partSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/slideswitch_bg"
            android:text="1235kb"/>
        <TextView
            android:id="@+id/totalSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/slideswitch_bg"
            android:text="/20005kb"/>
    </LinearLayout>

</LinearLayout>
