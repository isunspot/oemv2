<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_goalset"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_goal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/messureTime"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="6dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2015-12-12 1:38"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_gray_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/distance"
            android:layout_marginLeft="10dp"

            android:layout_alignParentLeft="true"
            android:textColor="@color/circle_text_color"
            android:textSize="20sp"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="(km)"
            android:layout_toRightOf="@id/tv_distance"

            android:textColor="@color/text_grey"
            android:textSize="16sp"
            />
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_greyborder"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        >
        <TextView
            android:id="@+id/tv_consume_fewer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/cosume_fewer"
            android:drawablePadding="6dp"
            android:layout_marginLeft="10dp"

            android:textColor="@color/circle_text_color"
            android:textSize="20sp"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="(Kcal)"
            android:layout_toRightOf="@id/tv_consume_fewer"

            android:textColor="@color/text_grey"
            android:textSize="16sp"
            />
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_greyborder"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_warnsetting"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        >
        <TextView
            android:id="@+id/tv_warnSetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/step"
            android:drawablePadding="6dp"
            android:textColor="@color/circle_text_color"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="(Kcal)"
            android:layout_toRightOf="@id/tv_warnSetting"

            android:textColor="@color/text_grey"
            android:textSize="16sp"
            />
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_greyborder"

            />
    </RelativeLayout>

</LinearLayout>
