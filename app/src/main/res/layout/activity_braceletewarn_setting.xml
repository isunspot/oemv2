<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/msgWarn"
            style="@style/commonTextStyle"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            />


        <ToggleButton
            android:id="@+id/togglebtn_msgwarn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:button="@drawable/checkbox_iphone"
            android:layout_centerVertical="true"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_lrHandSetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/callWarn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            style="@style/commonTextStyle"
            android:padding="10dp"
            />
        <ToggleButton
            android:id="@+id/togglebtn_phonewarn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:button="@drawable/checkbox_iphone"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
      <!--  <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_gray_arrow"
            android:layout_centerVertical="true"

          />-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_lostSetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/lostWarn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            style="@style/commonTextStyle"
            android:padding="10dp"
            />
        <ToggleButton
            android:id="@+id/togglebtn_lostwarn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:button="@drawable/checkbox_iphone"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <!--  <ImageView
              android:layout_width="10dp"
              android:layout_height="wrap_content"
              android:background="@drawable/ic_gray_arrow"
              android:layout_centerVertical="true"

            />-->
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_customsetting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_warnSetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/customWarn"
            android:layout_marginLeft="20dp"

            style="@style/commonTextStyle"
            android:padding="10dp"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_gray_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>


</LinearLayout>
