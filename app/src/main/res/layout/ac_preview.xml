<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.capitalbio.oemv2.myapplication.View.MyScrollView
        android:id="@+id/myScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </com.capitalbio.oemv2.myapplication.View.MyScrollView>
    <Button
        android:alpha="0.3"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/immediate_experience_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/preview_cat_button_marginbottom"
        android:textColor="@android:color/white"
	    android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/bg_navigation_bt"
        android:text="立即体验"/>
	<com.capitalbio.oemv2.myapplication.View.DropView
	    android:id="@+id/dropView"
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:layout_marginBottom="50dp"
        android:padding="10dp"
	    android:layout_gravity="bottom"
	    toolbar:dropCount="3"/>
	    
</FrameLayout>