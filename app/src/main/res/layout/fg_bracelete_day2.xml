
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:tc="http://schemas.android.com/apk/res-auto"
android:id="@+id/rl_content"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:scrollbars="none"
    android:fillViewport="true"
>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <com.capitalbio.oemv2.myapplication.View.TasksCompletedView
        android:id="@+id/arcView"
        android:layout_width="match_parent"
        android:layout_height="210dip"
        tc:radius="90dip"
        tc:strokeWidth="10dip"
        tc:circleColor="@color/circle_color"
        tc:ringColor="@color/white_sleep"
       />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_centerInParent="true"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="睡眠时间"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="@color/text_grey"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7小时26分"
                android:gravity="center"
                android:textColor="@color/text_grey"
                android:padding="2dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="睡眠质量 优"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/text_grey"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="目标8小时"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/text_grey"
                android:textSize="16sp"/>

        </LinearLayout>
    </RelativeLayout>
    <GridView
        android:id="@+id/gv_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:background="@color/white"
        >


    </GridView>

     <!--   <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:layout_below="@+id/ll_title_value"/>-->
    <com.capitalbio.oemv2.myapplication.View.Sleephistogram
        android:id="@+id/sleep"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/ll_title_value"
        android:background="#ffffff"
        />
</LinearLayout>

</ScrollView>