<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/bg_transparent_circle"/>

            <com.capitalbio.oemv2.myapplication.View.RoundImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_scene" />
        </FrameLayout>

    </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp"
            android:fillViewport="true"
            android:background="@color/gray_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="335dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/persondetail_bg"></LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="335dp"
                    android:layout_height="60dp"

                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/persondetail_bg"></LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="335dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/persondetail_bg"></LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="335dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/persondetail_bg"></LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />


                <LinearLayout
                    android:layout_width="335dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/persondetail_bg"></LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="335dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/persondetail_bg"></LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="335dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/persondetail_bg"></LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="335dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/persondetail_bg">

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
                
                
                <Button
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_submit"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/persondetail_submit"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>


        </ScrollView>
        
        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal" >
                <ImageView
                    android:id="@+id/iv_male"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_gray_circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="男"
                    android:textColor="@color/white"
                    android:textSize="30dp"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/iv_female"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_gray_circle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="女"
                    android:textColor="@color/white"
                    android:textSize="30dp"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
