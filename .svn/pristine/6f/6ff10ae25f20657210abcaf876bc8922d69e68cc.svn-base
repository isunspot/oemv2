<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activityRootView"
    android:background="@drawable/bg_login">

    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_transparent_circle"/>

        <ImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
           />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:id="@+id/rl_loginUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.capitalbio.oemv2.myapplication.View.ClearEditText
            android:id="@+id/et_phone_username"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_login_person"
            android:background="@null"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:maxLength="11"
            android:singleLine="true"
            android:hint="@string/please_input_user_name"/>
            <ToggleButton
                android:id="@+id/bt_selectUser"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:button="@null"
                android:textOn=""
                android:textOff=""
                android:padding="10dp"
                android:state_checked="false"
                android:background="@drawable/login_selector"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_phone_number"
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:background="@color/grey"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <com.capitalbio.oemv2.myapplication.View.ClearEditText
            android:id="@+id/edit_pwd"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_login_password"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:maxLength="16"
            android:textSize="16sp"
            android:singleLine="true"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="请输入密码"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:background="@color/grey"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_remeber_pw"
                style="@style/CustomCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:checked="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:text="@string/remember_password"/>



        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/bt_login"
        android:layout_width="250dp"
        android:layout_height="53dp"
        android:background="@drawable/bg_btn_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        />
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_forgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/foget_password"/>
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/register"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
