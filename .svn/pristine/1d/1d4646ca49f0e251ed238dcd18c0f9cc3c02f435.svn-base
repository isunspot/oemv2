<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_goal"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >


        <com.capitalbio.oemv2.myapplication.View.views.WheelView
            android:id="@+id/wv_step"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            />
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_vertical"

            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"

                android:background="@drawable/kedu_center_bg"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_triangle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:id="@+id/iv_foot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/footpress"
                android:layout_centerInParent="true"

                />

            <com.capitalbio.oemv2.myapplication.View.GoalSetProgressbar
                android:id="@+id/progressbar"
                android:layout_centerVertical="true"
                android:layout_width="150dp"
                android:layout_height="155dp"
                tc:radius="70dip"
                tc:strokeWidth="4dip"
                tc:circleColor="@color/circle_color_grey"
                tc:ringColor="@color/circle_text_color"
                />
            <TextView
                android:id="@+id/tv_steptext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="步数"
                android:textColor="@color/circle_text_color"

                android:gravity="center"
                android:layout_below="@id/progressbar"
                />
            <LinearLayout
                android:id="@+id/ll_value1"
                android:layout_below="@id/tv_steptext"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tv_dis_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="7.52"
                    android:textColor="@color/circle_text_color"
                    android:gravity="center"

                    />
                <TextView
                    android:id="@+id/tv_cal_value"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:textColor="@color/circle_text_color"
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/ll_value1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:visibility="gone"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="距离"
                    android:textColor="@color/circle_text_color"
                    android:gravity="center"

                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="消耗热能"
                    android:textColor="@color/circle_text_color"
                    android:gravity="center"
                    />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"

        >

        <com.capitalbio.oemv2.myapplication.View.views.WheelView
            android:id="@+id/wv_minute"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            />
        <com.capitalbio.oemv2.myapplication.View.views.WheelView
            android:id="@+id/wv_hour"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/wv_minute"
            />


        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_vertical"

            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/kedu_center_bg"
                android:layout_centerVertical="true"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_triangle"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"

                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"

            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_bed"
                android:layout_centerInParent="true"

                />

            <com.capitalbio.oemv2.myapplication.View.GoalSetProgressbar
                android:id="@+id/progressbarbed"
                android:layout_centerVertical="true"
                android:layout_width="150dp"
                android:layout_height="155dp"
                tc:radius="70dip"
                tc:strokeWidth="4dip"
                tc:circleColor="@color/circle_color_grey"
                tc:ringColor="@color/circle_text_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="睡眠时间"
                android:textColor="@color/circle_text_color"
                android:gravity="center"
                android:layout_below="@id/progressbarbed"
                />

        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>