<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.capitalbio.oemv2.myapplication.View.SpinnerLoader
        android:id="@+id/slid_spinner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        />

    <ImageView
        android:id="@+id/ic_slected_device"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_aircat_light"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/iv_main_shoppingcart"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_toLeftOf="@id/ic_slected_device"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_shopping_car"/>

    <ImageView
        android:id="@+id/iv_main_zongheceping"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_toRightOf="@id/ic_slected_device"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_composite"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="上次测量时间"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_test_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="2015.09.20 15:20"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_current_device_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/left_white_line"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/tv_middle_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/left_white_line"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="@string/app_name"/>

            <ImageView
                android:id="@+id/right_white_line"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tv_middle_app_name"
                android:layout_marginLeft="10dp"
                android:background="@color/white"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="您身边的健康管理专家"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>