<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rl_sportsinfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:padding="20dp"

                >

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_line_vertical" />

                <TableRow
                    android:id="@+id/tbr_line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_steps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_step"
                            android:gravity="center"
                            android:text="步数"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_steps_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_steps"
                            android:gravity="center"
                            android:text="3165步"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_dis"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="距离"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_distance_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_distance"
                            android:gravity="center"
                            android:text="3.5KM"
                            android:textSize="20sp" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tbr_line1"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_kal"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="热量"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_time_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_time"
                            android:gravity="center"
                            android:text="230kal"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_kal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_time"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="时间"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_kal_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_kal"
                            android:gravity="center"
                            android:text="30小时5分钟"
                            android:textSize="20sp" />

                    </LinearLayout>


                </TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tbr_line1"
                    android:background="@drawable/ic_line_horizen"
                    android:gravity="center_vertical" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_sleepinfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:id="@+id/rl_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_grade"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_ring"
                        android:gravity="center"
                        android:text="优"
                        android:textColor="@color/orange"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_grade"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="睡眠质量"
                        android:textSize="22sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/rl_left"
                    android:paddingLeft="10dp">


                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="总睡眠时长"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="7小时"
                        android:textSize="20sp" />


                    <View
                        android:id="@+id/view1"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_alignParentStart="true"
                        android:padding="5dp"
                        android:layout_below="@id/tv_total"
                        android:background="@color/text_grey" />


                    <TextView
                        android:id="@+id/tv_deep_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view1"
                        android:gravity="center"
                        android:text="总睡眠时长"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_time_deep"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/view1"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="7小时"
                        android:textSize="20sp" />


                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:padding="5dp"
                        android:layout_below="@id/tv_deep_total"
                        android:background="@color/text_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:gravity="center"
                        android:text="总睡眠时长"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_time_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/view2"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="7小时"
                        android:textSize="20sp" />

                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>