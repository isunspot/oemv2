<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_gray"
                android:background="@color/white"
                android:inputType="phone"
                android:maxLength="11"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:textColorHint="@color/register_text"/>

            <ImageView
                android:id="@+id/iv_phone_number"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_veryfication_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_veryfication_gray"
                    android:background="@color/white"
                    android:inputType="phone"
                    android:hint="请输入验证码"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColorHint="@color/register_text"/>

                <Button
                    android:id="@+id/bt_get_veryfication_code"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:text="获取验证码"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_check_code"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_get_veryfication_code"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_personname_gray"
                android:background="@color/white"
                android:hint="请设置您的用户名"
                android:maxLength="10"
                android:singleLine="true"
                android:textColorHint="@color/register_text"/>

            <ImageView
                android:id="@+id/iv_user_name"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_password_gray"
                android:background="@color/white"
                android:inputType="textPassword"
                android:hint="请输入密码"
                android:maxLength="16"
                android:singleLine="true"
                android:textColorHint="@color/register_text"/>

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_re_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_password_gray"
                android:background="@color/white"
                android:inputType="textPassword"
                android:hint="请再次输入密码"
                android:maxLength="16"
                android:singleLine="true"
                android:textColorHint="@color/register_text"/>

            <ImageView
                android:id="@+id/iv_re_password"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/ll_contract"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_remeber_pw"
                style="@style/CustomCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:text="我已阅读并同意用户协议"/>

        </LinearLayout>

        <Button
            android:id="@+id/bt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_register"/>


    </LinearLayout>



</LinearLayout>
