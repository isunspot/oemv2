<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <!--title-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_tang_zhi_san_xiang">
        <RelativeLayout
            android:id="@+id/rl_devicebind_back"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_devicebind_titlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text=""
            android:textSize="25dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:typeface="normal"/>
    </RelativeLayout>

    <!--body-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/qingxuanzepeijian"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        />


    <ListView
        android:id="@+id/lv_devicebind_devicelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/chongxinsousuo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/btn_search"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/zanbubangding"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:background="@drawable/btn_search"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />



</LinearLayout>
